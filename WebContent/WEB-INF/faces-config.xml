<?xml version="1.0"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
      http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">
	<application>
		<locale-config>
			<default-locale>en</default-locale>
		</locale-config>
		<resource-bundle>
			<base-name>messages</base-name>
			<var>msgs</var>
		</resource-bundle>
		
	</application>
	<managed-bean>
		<managed-bean-name>MainView</managed-bean-name>
		<managed-bean-class>pigiadibooks.pages.MainView</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
		<managed-property>
			<property-name>searchResults</property-name>
			<property-class>pigiadibooks.pages.SearchByTitleBean</property-class>
			<value>#{searchResults}</value>
		</managed-property>
	</managed-bean>
</faces-config>
